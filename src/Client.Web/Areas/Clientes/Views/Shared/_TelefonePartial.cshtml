@model Client.Web.Areas.Clientes.Models.Cliente

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Telefones[0].TipoTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefones[0].Operadora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefones[0].NumeroTelefone)
            </th>
            <th>@Html.DisplayNameFor(model => model.Telefones[0].Ativo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var idx = 0;
        }
        @foreach (var item in Model.Telefones)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operadora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroTelefone)
                </td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-control form-check-input" type="checkbox" name="Telefone.Ativo" id="Telefone.Ativo[@idx]" value="@(item.Ativo.Value ? "true" : "false")" checked="@(item.Ativo.Value)">
                    </div>
                </td>
                <td>
                    <a href="javascript:void(0)" id="btnRemover" onclick="crud.functions.removeTelefone(@item.NumeroTelefone)" title="Remover"><i class="fas fa-trash"></i></a>
                </td>

                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].Id" value="@Model.Telefones[@idx].Id" name="Cliente.Telefones[@idx].Id" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].IdCliente" value="@Model.Telefones[@idx].IdCliente" name="Cliente.Telefones[@idx].IdCliente" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].NumeroTelefone" value="@Model.Telefones[@idx].NumeroTelefone" name="Cliente.Telefones[@idx].NumeroTelefone" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].TipoTelefone" value="@Model.Telefones[@idx].TipoTelefone" name="Cliente.Telefones[@idx].TipoTelefone" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].IdTipoTelefone" value="@Model.Telefones[@idx].IdTipoTelefone" name="Cliente.Telefones[@idx].IdTipoTelefone" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].Operadora" value="@Model.Telefones[@idx].Operadora" name="Cliente.Telefones[@idx].Operadora" class="form-control" />
                <input type="hidden"  form="form" asp-for="Cliente.Telefones[@idx].Ativo" value="@(item.Ativo.Value ? "true" : "false")" name="Cliente.Telefones[@idx].Ativo" class="form-control" />
            </tr>
            idx++;
        }
    </tbody>
</table>